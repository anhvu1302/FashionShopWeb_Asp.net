@model FashionShopWeb.ViewModels.LoginUserVM
<form method="post" id="loginForm">
    @Html.AntiForgeryToken()

    <h1>Đăng nhập</h1>
    <span>Sử dụng tài khoản của bạn</span>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", @placeholder = "Tên tài khoản", @id = "signin-username" } })
    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })

    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Mật khẩu", @id = "signin-password" } })
    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

    <a href="#">Quên mật khẩu?</a>
    <button type="button" id="btnLoginSubmit">Đăng nhập</button>
</form>

