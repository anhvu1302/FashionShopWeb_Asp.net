@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { id = "login-form" }))
{
    @Html.AntiForgeryToken()
    <h1>Đăng nhập</h1>
    <span>Sử dụng tài khoản của bạn</span>
    <input type="text" placeholder="Tên Đăng nhập" id="username-input" name="userName" class="form-control">

    <input type="password" placeholder="Mật khẩu" id="password-input" name="password">
    if (ViewBag.TB != null)
    {
        <span class="text-danger">@ViewBag.TB</span>
    }
    <a href="#">Quên mật khẩu?</a>
    <button type="submit">Đăng nhập</button>
}
